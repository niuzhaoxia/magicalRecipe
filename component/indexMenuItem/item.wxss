.content {
  padding: 20rpx 5rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  width: 100%;
  flex: 1;
}

.title_box {
  width: 49%;
  display: flex;
  flex-direction: column;
  justify-items: center;
  align-items: space-around;
}

.title_box image {
  width: 340rpx;
}

.title_box .menu_name {
  font-size: 40rpx;
}

.title_box .menu_intr {
  color: #828282;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.menu_name, .menu_intr{
  padding: 5rpx 10rpx;
}
